<UserControl x:Class="ProtonVPN.Login.Views.OutdatedErrorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:ProtonVPN.Login.ViewModels"
             xmlns:resources="clr-namespace:ProtonVPN.Resources"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance viewModels:OutdatedAppErrorViewModel}">
    <Grid>
        <TextBlock Text="{Binding Error}"
                   TextWrapping="Wrap"
                   Foreground="White"
                   FontSize="14"
                   Padding="20,30,20,60"/>

        <DockPanel VerticalAlignment="Bottom" Margin="20,0,20,20">
            <fa:ImageAwesome Spin="{Binding Checking}"
                             Visibility="{Binding Checking, Converter={StaticResource BoolToVis}}"
                             Width="12"
                             VerticalAlignment="Center"
                             Icon="Refresh" Foreground="White"/>
            <fa:FontAwesome Icon="ArrowRight"
                            Foreground="White"
                            VerticalAlignment="Center"
                            Padding="5,0"/>
            <Button Style="{StaticResource ClearStyleButton}"
                    Foreground="White"
                    FontSize="14"
                    FontWeight="Bold"
                    BorderBrush="Transparent"
                    Background="Transparent"
                    Content="{resources:Loc Login_Error_lnk_Update}"
                    Margin="0,-2,0,0"
                    VerticalAlignment="Center"
                    Command="{Binding UpdateCommand}"
                    HorizontalAlignment="Left"/>
        </DockPanel>
    </Grid>
</UserControl>
